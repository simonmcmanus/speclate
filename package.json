{
  "name": "speclate",
  "version": "19.3.0",
  "description": "",
  "scripts": {
    "test": "standard && npm run test:client && npm run test:server && npm run test:e2e",
    "test:client": "NODE_ENV=test ./node_modules/karma/bin/karma  start  --single-run ",
    "test:server": "NODE_ENV=test jasmine --config=./tests/spec/support/jasmine.json",
    "test:e2e": "npm run run:e2e:server && ./node_modules/.bin/testcafe chrome router/tests/testcafe/*.js",
    "run:e2e:server": "npm run e2e:run:build:client-side && cd tests/spec/samples/e2e && speclate --build && speclate --dev 5004 &",
    "e2e:run:build:client-side": "./node_modules/browserify/bin/cmd.js router/tests/sample/client/router.js > router/tests/sample/client/router-compiled.js",
    "e2e:run": "npm run e2e:run:build:client-side && cd router/tests/sample/ && ../../../bin/speclate.js --build && ../../../bin/speclate.js --dev 5004",
    "e2e:test:chrome": "./node_modules/.bin/testcafe chrome,firefox router/tests/testcafe/*-test.js"
  },
  "bin": "./bin/speclate.js",
  "author": "Simon McManus",
  "license": "MIT",
  "dependencies": {
    "async.eachof": "0.5.x",
    "async.map": "0.5.x",
    "async.parallel": "0.5.x",
    "lodash.clone": "4.5.x",
    "lodash.isarray": "4.0.x",
    "lodash.isobject": "3.0.x",
    "lodash.isstring": "4.0.x",
    "lodash.merge": "4.x.x",
    "sizlate": "2.x.x",
    "speclate-cli": "^14.1.1",
    "speclate-fetch": "2.0.x"
  },
  "browser": {
    "fs": "./client/read-file-override.js"
  },
  "devDependencies": {
    "browserify": "^15.2.0",
    "jasmine": "~3.1.0",
    "karma": "^4.1.0",
    "karma-browserify": "~5.3.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-firefox-launcher": "~1.1.0",
    "karma-jasmine": "1.1.x",
    "karma-jquery": "0.2.x",
    "karma-opera-launcher": "1.0.x",
    "karma-phantomjs-launcher": "1.0.x",
    "karma-serve-static": "1.0.x",
    "mocha": "~5.0.0",
    "standard": "^14.0.2",
    "testcafe": "^1.2.1",
    "watchify": "^3.11.1"
  },
  "standard": {
    "ignore": [
      "client",
      "testRunner",
      "test"
    ],
    "globals": [
      "describe",
      "before",
      "beforeEach",
      "expect",
      "it",
      "test",
      "fixture"
    ]
  }
}
